<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

       <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mysettings"/>

        <EditText
            android:id="@+id/name_edittext_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_top5"
            android:inputType="text"
            android:hint="@string/setting_reminderTime"
            android:imeOptions="flagNoExtractUi"/>

        <EditText
            android:id="@+id/email_edittext_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_top5"
            android:inputType="text"
            android:hint="@string/setting_reminderTime"
            android:imeOptions="flagNoExtractUi"/>

        <EditText
            android:id="@+id/remindertime_edittext_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_top5"
            android:inputType="text"
            android:hint="@string/setting_reminderTime"
            android:imeOptions="flagNoExtractUi"/>

        <EditText
            android:id="@+id/maxDistance_edittext_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_top5"
            android:inputType="text"
            android:hint="@string/maxDistance"
            android:imeOptions="flagNoExtractUi"/>

        <EditText
            android:id="@+id/gender_edittext_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_top5"
            android:inputType="text"
            android:hint="@string/setting_gender"
            android:imeOptions="flagNoExtractUi"/>

        <EditText
            android:id="@+id/status_edittext_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_top5"
            android:inputType="text"
            android:hint="@string/setting_status"
            android:imeOptions="flagNoExtractUi"/>

        <EditText
            android:id="@+id/agemin_edittext_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_top5"
            android:inputType="text"
            android:hint="@string/setting_agemin"
            android:imeOptions="flagNoExtractUi"/>

        <EditText
            android:id="@+id/agemax_edittext_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_top5"
            android:inputType="text"
            android:hint="@string/setting_agemax"
            android:imeOptions="flagNoExtractUi"/>

        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update"/>

        <FrameLayout
            android:id="@+id/profile_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/textview_top10"/>

    </LinearLayout>

</ScrollView>